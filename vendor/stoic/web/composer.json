{
	"name": "stoic/web",
	"description": "Web site helper components for the Stoic framework",
	"version": "1.0.9",
	"homepage": "https://stoic-framework.com",
	"autoload": {
		"classmap": ["Web/"],
		"exclude-from-classmap": [
			"Tests/"
		]
	},
	"require": {
		"php": ">=7.4",
		"stoic/stoic": "^1.0",
		"stoic/io": "^1.0",
		"stoic/pdo": "^1.0",
		"andym84/config": "^1.0",
		"league/plates": "^3.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^9"
	},
	"scripts": {
		"post-create-project-cmd": [
			"stoic-create"
		]
	},
	"bin": [
		"stoic-create",
		"stoic-migrate",
		"stoic-configure"
	]
}
